#!/bin/bash
# vim: set foldmethod=marker :
# {{{ Variables

subcommand="pull"
repo_args=()
dry_run=false
compact=true

# -------------------------------------------------------------------------- }}}
# {{{ Load Config

REPO_CONFIG="$HOME/.config/gits/repo_locations"

if [[ -f "$REPO_CONFIG" ]]; then
  source "$REPO_CONFIG"
else
  echo "ERROR: repo_locations file not found at $REPO_CONFIG" >&2
  exit 1
fi

# -------------------------------------------------------------------------- }}}
# {{{ usage

usage() {
  echo "Usage: gits [options] [repo-locations...]"
  echo
  echo "Options:"
  echo "  -h          Show help"
  echo "  -l          List repository locations"
  echo "  -c          Clone missing repositories"
  echo "  -r          Pull latest changes (default)"
  echo "  -p          Alias for -r (pull)"
  echo "  -d          Dry-run (simulate)"
  echo "  -v          Verbose output"
  exit 0
}

# -------------------------------------------------------------------------- }}}
# {{{ listRepos

listRepos() {
  echo "Available repository locations:"
  grep '^repo_' "$REPO_CONFIG" | sed 's/^repo_//;s/=.*//'
}

# -------------------------------------------------------------------------- }}}
# {{{ repo

repo() {
  local location="$1"
  local repos_var="repo_${location}"

  if [[ -z "${!repos_var}" ]]; then
    echo "No repositories defined for location: $location"
    return
  fi

  local basedir="$HOME/$location"
  mkdir -p "$basedir"

  for entry in "${!repos_var}"; do
    local url="${entry%% *}"
    local alias="${entry##* }"
    local target_dir="$basedir/$alias"

    if [[ "$subcommand" == "clone" ]]; then
      if [[ ! -d "$target_dir/.git" ]]; then
        echo "Cloning $url -> $target_dir"
        if [[ "$dry_run" = false ]]; then
          git clone "$url" "$target_dir"
        fi
      else
        echo "Already exists: $target_dir"
      fi
    elif [[ "$subcommand" == "pull" ]]; then
      if [[ -d "$target_dir/.git" ]]; then
        echo "Pulling $target_dir"
        if [[ "$dry_run" = false ]]; then
          (cd "$target_dir" && git pull)
        fi
      else
        echo "Skipping non-repo: $target_dir"
      fi
    fi
  done
}

# -------------------------------------------------------------------------- }}}
# {{{ Parse Arguments

if [[ $# -eq 0 ]]; then
  usage
fi

while [[ $# -gt 0 ]]; do
  case "$1" in
    -h)
      usage
      ;;
    -l)
      listRepos
      exit 0
      ;;
    -c)
      subcommand="clone"
      shift
      ;;
    -r|-p)
      subcommand="pull"
      shift
      ;;
    -d)
      dry_run=true
      shift
      ;;
    -v)
      compact=false
      shift
      ;;
    *)
      repo_args+=("$1")
      shift
      ;;
  esac
done

# -------------------------------------------------------------------------- }}}
# {{{ Main

for location in "${repo_args[@]}"; do
  repo "$location"
done

# -------------------------------------------------------------------------- }}}
